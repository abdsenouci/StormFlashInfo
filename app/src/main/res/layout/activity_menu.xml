<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.abdallah.stormflashinfo.menuActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/appbar_padding_top"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:title="@string/app_name">

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/appbar">

            <Button
                android:id="@+id/btnBar"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/category1"
                android:drawableLeft="@mipmap/ic_bar"
                android:drawablePadding="15dp"
                android:drawableStart="@mipmap/ic_bar"
                android:onClick="choose0"
                android:paddingEnd="50dp"
                android:paddingLeft="15dp"
                android:paddingRight="50dp"
                android:paddingStart="15dp"
                android:text="@string/category1"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:typeface="normal" />

            <Button
                android:id="@+id/btnRestaurant"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/category2"
                android:drawableLeft="@mipmap/ic_restaurant"
                android:drawablePadding="15dp"
                android:drawableStart="@mipmap/ic_restaurant"
                android:onClick="choose1"
                android:paddingEnd="50dp"
                android:paddingLeft="15dp"
                android:paddingRight="50dp"
                android:paddingStart="15dp"
                android:text="@string/category2"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:typeface="normal" />

            <Button
                android:id="@+id/btnCulture"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/category3"
                android:drawableLeft="@mipmap/ic_culture"
                android:drawablePadding="15dp"
                android:drawableStart="@mipmap/ic_culture"
                android:onClick="choose2"
                android:paddingEnd="50dp"
                android:paddingLeft="15dp"
                android:paddingRight="50dp"
                android:paddingStart="15dp"
                android:text="@string/category3"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:typeface="normal" />

            <Button
                android:id="@+id/btnSport"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/category4"
                android:drawableLeft="@mipmap/ic_sport"
                android:drawablePadding="15dp"
                android:drawableStart="@mipmap/ic_sport"
                android:onClick="choose3"
                android:paddingEnd="50dp"
                android:paddingLeft="15dp"
                android:paddingRight="50dp"
                android:paddingStart="15dp"
                android:text="@string/category4"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:typeface="normal" />

            <Button
                android:id="@+id/btnConcert"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/category5"
                android:drawableLeft="@mipmap/ic_concert"
                android:drawablePadding="15dp"
                android:drawableStart="@mipmap/ic_concert"
                android:onClick="choose4"
                android:paddingEnd="50dp"
                android:paddingLeft="15dp"
                android:paddingRight="50dp"
                android:paddingStart="15dp"
                android:text="@string/category5"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:typeface="normal" />

            <Button
                android:id="@+id/btnBoite"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/category6"
                android:drawableLeft="@mipmap/ic_boite"
                android:drawablePadding="15dp"
                android:drawableStart="@mipmap/ic_boite"
                android:onClick="choose5"
                android:paddingEnd="50dp"
                android:paddingLeft="15dp"
                android:paddingRight="50dp"
                android:paddingStart="15dp"
                android:text="@string/category6"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:typeface="normal" />

            <Button
                android:id="@+id/btnCinema"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/category7"
                android:drawableLeft="@mipmap/ic_cinema"
                android:drawablePadding="15dp"
                android:drawableStart="@mipmap/ic_cinema"
                android:onClick="choose6"
                android:paddingEnd="50dp"
                android:paddingLeft="15dp"
                android:paddingRight="50dp"
                android:paddingStart="15dp"
                android:text="@string/category7"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:typeface="normal" />

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
